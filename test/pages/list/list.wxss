.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 10rpx 0;
  box-sizing: border-box;
  align-content: flex-start;
}

.active {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  align-content: flex-start;
  flex-wrap: nowrap;
}

.active-title {
  color: #f90;
}

.active-image-view {
  align-items: flex-start;
  display: flex;
  flex-direction: column;
  background-color: #f90;
  /*
   flex-shrink: 1;
   flex-grow:1;
   flex-basis: auto;
   */
}

.active-image {
  width: 450rpx;
  height: 400rpx;
  /*flex-shrink: 1;*/
}

.active-text-view {
  display: flex;
  flex-direction: column;
  margin: 10px;
  justify-content: center;
  flex-shrink: 1;
  flex-grow: 1;
  align-self: auto; /*stretch */
}

.labelclass {
  padding: 10rpx 0rpx;
  flex-shrink: 2;
}

.weui-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  
}
