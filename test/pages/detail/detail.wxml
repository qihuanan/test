<view>
<image wx:if="{{line.picture2}}"  bindtap="showimgTap" data-imgsrc="https://jd.yousheng.tech/qihntest/download?filename={{line.picture2}}" class="detailimg" src="https://jd.yousheng.tech/qihntest/download?filename={{line.picture2}}"></image>
</view>

<scroll-view scroll-y="true" style="height: 500rpx;" class="weui-flex ">
  <view class="weui-flex__item">
    <view class="item-text">
      <view class="active-title">
        <view class="active-title-top">
          {{line.name}}
          <mp-icon bindtap="taplike" data-lineid="{{line.id}}"  class="active-title-like" icon="like" type="{{line.like == '1' ? 'field' : 'outline' }}" color="red" size="{{35}}"></mp-icon>
        </view>
        
        <view class="active-title-bottom weui-flex">
          <view class="weui-flex__item">
              <view class="">总长</view>
              <view class="active-title-bottom-item">{{line.changdu}}km</view>
          </view>
          <view class="weui-flex__item">
              <view class="">打卡点</view>
              <view class="active-title-bottom-item">{{line.dianshu}}</view>
          </view>
          <view class="weui-flex__item">
              <view class="">积分奖励</view>
              <view class="active-title-bottom-item">{{line.jifen}}</view>
          </view>
        </view>
